<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivityFragment"
    android:orientation="vertical">

    <TextView android:text="dbPath: " android:id="@+id/dbPath" android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true" />

    <TextView android:text="dbTitle: " android:id="@+id/dbTitle" android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dbPath" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/restaurantInput"
        android:layout_below="@+id/dbTitle"
        android:hint="Restaurant ID" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="CREATE RECORD"
        android:id="@+id/create_record_button"
        android:onClick="createRecord"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="READ RECORD"
        android:id="@+id/read_record_button"
        android:onClick="readRecord"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="UPDATE RECORD"
        android:id="@+id/update_record_button"
        android:onClick="updateRecord"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="DELETE RECORD"
        android:id="@+id/delete_record_button"
        android:onClick="deleteRecord"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="CHECK WHICH LIST"
        android:id="@+id/check_which_db_button"
        android:onClick="checkRecordColumn"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="SHOW TIMESTAMP"
        android:id="@+id/show_timestamp_button"
        android:onClick="showRestaurantTimestamp"/>

</LinearLayout>
