<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.csc413.team5.fud5" >

    <!-- Used by: - Yelp API (Scribe): send OAuth request and get response
                  - Google Maps: download map tiles -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <!-- Used by the Google Play Services Location API, Google Maps -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <!-- Used by Google Maps -->
    <!-- check connection status in order to determine whether data can be downloaded -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!-- cache map tile data in the device's external storage data; doesn't sound that
         useful but it's specified as a required setting -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <!-- Google Maps: requirement for OpenGL ES version 2 -->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true"/>

    <!-- TODO: Google Maps API key
     do we really want to put it here? See:
     https://developers.google.com/maps/documentation/android/signup -->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
