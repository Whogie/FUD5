<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_location_search_text"
        android:id="@+id/default_location_search_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_location_followup"
        android:id="@+id/textView2" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtLocation"
        android:textSize="24sp"
        android:background="@android:drawable/editbox_background_normal"
        android:minHeight="50dp"
        android:singleLine="true"
        android:hint="@string/hint_default_location_search"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_search_term_text"
        android:id="@+id/default_search_term_text" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background_normal"
        android:textSize="24sp"
        android:id="@+id/txtSearchTerm"
        android:minHeight="50dp"
        android:singleLine="true"
        android:hint="@string/hint_default_search_term"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_search_radius_text"
        android:id="@+id/default_search_radius" />
    <Spinner
        android:layout_width="141dp"
        android:layout_height="44dp"
        android:id="@+id/spnRadius"
        android:background="@android:drawable/editbox_background_normal"
        android:spinnerMode="dropdown"
        android:minHeight="50dp"
        android:minWidth="500dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_min_star_text"
        android:id="@+id/default_min_star" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:id="@+id/ratingBar"
        android:stepSize="0.5"
        android:rating="3.5"
        android:progressDrawable="@drawable/ratingbar"
        android:layout_below="@+id/textView8"
        android:layout_alignParentEnd="true"
        android:numStars="5" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/generic_save_text"
        android:id="@+id/ok_button"
        android:onClick="onSaveButtonPress"/>

</LinearLayout>