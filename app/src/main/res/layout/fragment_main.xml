<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:adjustViewBounds="true"
    android:layout_alignParentTop="false"
    android:layout_alignWithParentIfMissing="false">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/testbackground"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".MainActivityFragment">


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtLocation"
            android:textSize="24sp"
            android:background="@android:drawable/editbox_background_normal"
            android:layout_below="@+id/textView6"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/btnFindLocation"
            android:minHeight="50dp"
            android:text="San Francisco" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textSize="16sp"
            android:id="@+id/textView6"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnFindLocation"
            android:background="@android:drawable/picture_frame"
            android:src="@android:drawable/ic_menu_mylocation"
            android:layout_below="@+id/textView6"
            android:layout_alignBottom="@+id/txtLocation"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search Term (Optional)"
            android:textSize="16sp"
            android:id="@+id/textView7"
            android:layout_below="@+id/txtLocation"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background_normal"
            android:textSize="24sp"
            android:id="@+id/txtSearchTerm"
            android:layout_below="@+id/textView7"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/btnFindLocation"
            android:minHeight="50dp"
            android:text="Tacos"
            android:layout_alignEnd="@+id/txtRadius" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minimum Rating"
            android:textSize="16sp"
            android:id="@+id/textView8"
            android:layout_below="@+id/txtSearchTerm"
            android:layout_alignParentStart="true" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar"
            android:layout_below="@+id/textView8"
            android:layout_alignParentStart="true"
            android:stepSize="0.5"
            android:rating="3" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:background="@android:drawable/editbox_background_normal"
            android:ems="10"
            android:id="@+id/txtRadius"
            android:text="1.5"
            android:textSize="24sp"
            android:minHeight="50dp"
            android:layout_below="@+id/textView8"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/ratingBar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Radius (miles)"
            android:textSize="16sp"
            android:id="@+id/textView9"
            android:layout_above="@+id/txtRadius"
            android:layout_toEndOf="@+id/ratingBar" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fudbuttoncontainer"
            android:layout_below="@+id/ratingBar">

            <ImageButton
                android:layout_width="285dp"
                android:layout_height="283dp"
                android:id="@+id/btnFuDPlz"
                android:src="@drawable/fudplz"
                android:scaleType="centerInside"
                android:background="@null"
                android:layout_below="@+id/textView"
                android:layout_alignEnd="@+id/textView"
                android:layout_alignStart="@+id/textView"
                android:onClick="btnFuDPlz"
                android:layout_gravity="center" />
        </FrameLayout>

    </RelativeLayout>

</FrameLayout>

